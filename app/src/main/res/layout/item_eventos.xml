<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="8dp"
    android:layout_marginBottom="7dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <TextView
        android:id="@+id/nomeLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local:"
        android:textStyle="bold"
        android:textColor="#444"
        android:textSize="17sp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evento:"
        android:textStyle="italic"
        android:textColor="#516A58"
        android:textSize="15sp"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginEnd="18dp"/>

        <TextView
            android:id="@+id/pessoas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pessoas: "
            android:textColor="#666"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/spinnerImpacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Impacto: "
        android:textColor="#AF5C38"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <ImageButton
        android:id="@+id/deletar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_delete_24"
        android:background="@android:color/transparent"
        android:tint="#B71C1C"
        android:contentDescription="Excluir"
        android:layout_gravity="end"
        android:layout_marginTop="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:layout_marginTop="6dp" />

</LinearLayout>